#include <iostream>
#include <vector>
#include <limits>

int main() {
    int n;

    // a) Użytkownik podaje liczbę elementów wektora
    std::cout << "Podaj liczbe elementow wektora: ";
    std::cin >> n;

    if (n <= 0) {
        std::cout << "Liczba elementow musi byc dodatnia!" << std::endl;
        return 1;
    }

    std::vector<int> wektor(n);

    // b) Pobranie elementów wektora od użytkownika
    std::cout << "Podaj " << n << " elementow wektora:" << std::endl;
    for (int i = 0; i < n; i++) {
        std::cin >> wektor[i];
    }

    // c) Znalezienie wartości elementu maksymalnego
    int max_wartosc = std::numeric_limits<int>::min();
    int max_indeks = -1;

    for (int i = 0; i < n; i++) {
        if (wektor[i] > max_wartosc) {
            max_wartosc = wektor[i];
            max_indeks = i;
        }
    }

    // d) Wyświetlenie wartości maksymalnej i jej indeksu
    std::cout << "Maksymalna wartosc: " << max_wartosc << std::endl;
    std::cout << "Indeks maksymalnej wartosci: " << max_indeks << std::endl;

    return 0;
}
