#include <iostream>
#include <vector>
#include <algorithm>

int main() {
    int n;
    
    // a) Wczytanie aktualnego rozmiaru tablicy liczb całkowitych
    std::cout << "Podaj rozmiar tablicy (musi byc parzysty): ";
    std::cin >> n;

    if (n <= 0 || n % 2 != 0) {
        std::cout << "Rozmiar tablicy musi byc dodatni i parzysty!" << std::endl;
        return 1;
    }

    std::vector<int> tablica(n);

    // b) Wczytanie elementów tablicy liczb całkowitych
    std::cout << "Podaj " << n << " elementow tablicy:" << std::endl;
    for (int i = 0; i < n; i++) {
        std::cin >> tablica[i];
    }

    // c) Zamiana miejscami elementów tablicy po przeciwnych stronach
    for (int i = 0; i < n / 2; i++) {
        std::swap(tablica[i], tablica[n - i - 1]);
    }

    // Wyświetlenie wynikowej tablicy
    std::cout << "Tablica po zamianie elementow:" << std::endl;
    for (int i = 0; i < n; i++) {
        std::cout << tablica[i] << " ";
    }
    std::cout << std::endl;

    return 0;
}
